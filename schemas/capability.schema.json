{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:goreos:schema:capability:1.0.0",
  "title": "Capability",
  "description": "Colímite (Coproducto) de Stories. Capability = ∐ Story_j",
  "type": "object",
  "required": ["id", "urn", "name", "domain"],
  "properties": {
    "_meta": {
      "type": "object",
      "properties": {
        "urn": { "type": "string", "pattern": "^urn:goreos:atom:capability:" },
        "type": { "const": "Capability" },
        "schema": { "const": "urn:goreos:schema:capability:1.0.0" }
      },
      "required": ["urn", "type"]
    },
    "id": {
      "type": "string",
      "pattern": "^CAP-[A-Z]+-[A-Z0-9]+-[0-9]+$"
    },
    "urn": {
      "type": "string",
      "pattern": "^urn:goreos:atom:capability:"
    },
    "name": {
      "type": "string",
      "minLength": 5
    },
    "domain": {
      "type": "string",
      "pattern": "^D-[A-Z]+$"
    },
    "module_id": {
      "type": "string",
      "pattern": "^MOD-",
      "description": "Referencia al módulo que implementa (F: Capability → Module)"
    }
  },
  "additionalProperties": false
}
