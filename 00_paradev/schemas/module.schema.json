{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:goreos:schema:module:1.0.0",
  "title": "Module",
  "description": "Funtor que organiza procesos y entidades. Module = Σ(Process_k × Entity_k)",
  "type": "object",
  "required": ["id", "name", "domain"],
  "properties": {
    "_meta": {
      "type": "object",
      "properties": {
        "urn": { "type": "string", "pattern": "^urn:goreos:atom:module:" },
        "type": { "const": "Module" },
        "schema": { "const": "urn:goreos:schema:module:1.0.0" },
        "source": { "type": "string" }
      },
      "required": ["urn", "type"]
    },
    "id": {
      "type": "string",
      "pattern": "^MOD-[A-Z]+-[A-Z0-9_]+$",
      "description": "Identificador único del módulo"
    },
    "urn": {
      "type": "string",
      "pattern": "^urn:goreos:atom:module:",
      "description": "URN opcional a nivel raíz (preferir _meta.urn)"
    },
    "code": {
      "type": "string",
      "description": "Código corto del módulo (M0, M1, etc.)"
    },
    "name": {
      "type": "string",
      "minLength": 3
    },
    "domain": {
      "type": "string",
      "pattern": "^D-[A-Z]+$"
    },
    "pillar": {
      "type": "string",
      "enum": ["Core", "Support", "Transversal"],
      "description": "Clasificación arquitectónica"
    },
    "description": {
      "type": "string",
      "description": "Descripción del propósito del módulo"
    },
    "priority": {
      "type": "string",
      "enum": ["P0", "P1", "P2", "P3"],
      "description": "Prioridad de implementación"
    },
    "number": {
      "type": "integer",
      "description": "Número de orden dentro del dominio"
    },
    "type": {
      "type": "string",
      "enum": ["DOMAIN_SPECIFIC", "CORE", "SUPPORT", "OPS", "DEV"],
      "description": "Tipo de módulo"
    },
    "subsystems": {
      "type": ["array", "null"],
      "items": { "type": "string" },
      "description": "Subsistemas que componen el módulo"
    },
    "stories": {
      "type": ["array", "null"],
      "items": { "type": "string" },
      "description": "User Stories asociadas al módulo"
    },
    "entities": {
      "type": ["array", "null"],
      "items": { "type": "string" },
      "description": "Entidades que el módulo gestiona (objetos del functor)"
    },
    "scripts": {
      "type": ["array", "null"],
      "items": { "type": "string" },
      "description": "Scripts de apoyo asociados"
    },
    "orko_integration": {
      "type": "object",
      "description": "Configuración de integración con ORKO",
      "properties": {
        "primitives": { "type": "array", "items": { "type": "string" } },
        "categorical_elements": { "type": "array", "items": { "type": "string" } }
      }
    },
    "morphisms": {
      "type": "object",
      "description": "Morfismos del módulo (relaciones con otros componentes)",
      "properties": {
        "capabilities": { "type": "array", "items": { "type": "string" } },
        "implementado_por": { "type": "array", "items": { "type": "string" } },
        "depends_on": { "type": "array", "items": { "type": "string" } }
      }
    },
    "stats": {
      "type": "object",
      "description": "Estadísticas del módulo",
      "properties": {
        "p0_stories": { "type": "integer" },
        "p1_stories": { "type": "integer" },
        "p2_stories": { "type": "integer" },
        "total": { "type": "integer" }
      }
    }
  },
  "additionalProperties": true
}
