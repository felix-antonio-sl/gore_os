{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:goreos:schema:process:1.0.0",
  "title": "Process",
  "description": "Coálgebra c: S → F(S) que define comportamiento del sistema",
  "type": "object",
  "required": ["id", "name", "domain"],
  "properties": {
    "_meta": {
      "type": "object",
      "properties": {
        "urn": { "type": "string", "pattern": "^urn:goreos:atom:process:" },
        "type": { "const": "Process" },
        "schema": { "const": "urn:goreos:schema:process:1.0.0" },
        "source": { "type": "string" }
      },
      "required": ["urn", "type"]
    },
    "id": {
      "type": "string",
      "pattern": "^PROC-[A-Z]+-[A-Za-z0-9._-]+$",
      "description": "Identificador único del proceso"
    },
    "urn": {
      "type": "string",
      "pattern": "^urn:goreos:atom:process:",
      "description": "URN canónico (opcional si existe en _meta)"
    },
    "name": {
      "type": "string",
      "minLength": 3
    },
    "domain": {
      "type": "string",
      "pattern": "^(D-[A-Z]+(-[A-Z_]+)?|FENIX)$",
      "description": "Dominio o subdominio del proceso (FENIX es caso especial)"
    },
    "code": {
      "type": "string",
      "description": "Código corto del proceso (P1, D04, etc.)"
    },
    "subdomain": {
      "type": "string",
      "description": "Subdominio funcional"
    },
    "process_type": {
      "type": "string",
      "enum": ["BPMN", "DMN", "CMMN", "WORKFLOW"],
      "description": "Notación del proceso"
    },
    "bpmn_ref": {
      "type": "string",
      "description": "Referencia a diagrama BPMN en docs/processes/"
    },
    "module_id": {
      "type": "string",
      "pattern": "^MOD-",
      "description": "Módulo contenedor"
    },
    "spec": {
      "type": "object",
      "description": "Especificación operativa del proceso extraída de documentación BPMN",
      "properties": {
        "bpmn_id": {
          "type": "string",
          "description": "Identificador BPMN formal"
        },
        "period": {
          "type": "string",
          "description": "Periodicidad del proceso (Anual, Mensual, etc.)"
        },
        "sla": {
          "type": "string",
          "description": "Service Level Agreement esperado"
        },
        "owner": {
          "type": "string",
          "description": "Rol/Área responsable"
        },
        "systems": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Sistemas involucrados"
        },
        "mermaid": {
          "type": "string",
          "description": "Diagrama Mermaid completo del flujo del proceso"
        },
        "mermaid_ref": {
          "type": "string",
          "description": "Referencia al diagrama Mermaid en documentación"
        }
      }
    }
  },
  "additionalProperties": true
}
